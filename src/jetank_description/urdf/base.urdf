<?xml version="1.0"?>
<robot name="plate_with_rect_pillar">

  <link name="base_link">

    <!-- 1. 관성 (대충 값이라도 넣어야 경고가 줄어듦) -->
    <inertial>
      <origin xyz="0 0 0.0425" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia
        ixx="0.01" ixy="0.0" ixz="0.0"
        iyy="0.01" iyz="0.0"
        izz="0.01"/>
    </inertial>

    <!-- 2. 충돌: 전체를 하나의 박스로 취급 (0.28 x 0.285 x 0.085) -->
    <collision name="collision_box">
      <origin xyz="0 0 0.0425" rpy="0 0 0"/>
      <geometry>
        <box size="0.28 0.285 0.085"/>
      </geometry>
    </collision>

    <!-- 3. 연두색 판 (맨 위, 두께 0.015, 중심 z = 0.035) -->
    <visual name="plate_visual">
      <origin xyz="0 0 0.0775" rpy="0 0 0"/>
      <geometry>
        <box size="0.28 0.285 0.015"/>
      </geometry>
      <material name="green_plate">
        <color rgba="0.6 0.9 0.1 1.0"/>
      </material>
    </visual>

    <!-- 4. 검정 사각 기둥 (받침, size 0.18 x 0.18 x 0.07, 중심 z = -0.0075) -->
    <visual name="rect_pillar_visual">
      <origin xyz="0 0 0.035" rpy="0 0 0"/>
      <geometry>
        <box size="0.18 0.18 0.07"/>
      </geometry>
      <material name="black_pillar">
        <color rgba="0.05 0.05 0.05 1.0"/>
      </material>
    </visual>

  </link>

  <!-- Gazebo에서는 이걸 움직이지 않는 물체로 사용 -->
  <gazebo reference="base_link">
    <static>true</static>
  </gazebo>

</robot>
